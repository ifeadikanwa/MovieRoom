<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.movieroom.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_myMoviesFragment"
            app:destination="@id/myMoviesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_discoverFragment"
            app:destination="@id/discoverFragment" />
    </fragment>
    <fragment
        android:id="@+id/myMoviesFragment"
        android:name="com.example.movieroom.MyMoviesFragment"
        android:label="fragment_my_movies"
        tools:layout="@layout/fragment_my_movies" />
    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.example.movieroom.DiscoverFragment"
        android:label="fragment_discover"
        tools:layout="@layout/fragment_discover" >
        <argument
            android:name="genre"
            app:argType="com.example.movieroom.Genre" />
    </fragment>
</navigation>